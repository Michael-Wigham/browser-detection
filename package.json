{
  "name": "@paguro/browser-detection",
  "version": "0.1.0-alpha1",
  "author": "Paguro Team",
  "license": "MIT",
  "description": "A library for detecting browser and platform via feature testing.",
  "main": "dist/browser-detection.js",
  "scripts": {
    "clean": "rm -f dist/browser-detection*.js",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prettify": "prettier --single-quote --write './*.js' 'src/**/*.js' 'test/**/*.js'",
    "release": "yarn clean && yarn build && ./scripts/publish.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn prettify"
    ]
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "platform": "^1.3.5",
    "prettier": "^1.17.1",
    "rollup": "^1.12.3"
  }
}
